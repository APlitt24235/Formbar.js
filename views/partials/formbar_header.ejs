<style>
  body {
    padding-top: 72px;
  }
</style>
<header id="formbarHeader">
  <a href="/" id="headerLogo">Formbar</a>
  <% if (currentUser) { %>
    <% if (currentUser.classPermissions) { %>
      <a href="/" class="headerTab">Panel</a>
      <% } %>
        <% if (currentUser.permissions>= MANAGER_PERMISSIONS) { %>
          <a href="/managerPanel" class="headerTab">Manager</a>
          <% } %>
            <% if (!currentUser.classPermissions) { %>
              <a href="/manageClass" class="headerTab">Manage Class</a>
              <% } %>
                <% if (currentUser.classPermissions>=STUDENT_PERMISSIONS) { %>
                  <a href="/plugins" class="headerTab">Plugins</a>
                  <a href="/" class="headerTab" onclick="(()=>{socket.emit('leaveClass')})()">Leave
                    Class</a>
                  <% }%>
                    <a href="/" class="headerTab" onclick="(()=>{socket.emit('logout')})()">Logout</a>
                    <% } %>
                      <button onclick="changeTheme()">LM/DM</button>
</header>
<script>
  document.body.style.backgroundColor = getCookie("theme")
  if (getCookie("theme") == "white") document.body.style.color = "black";
  else if (getCookie("theme") == "rgb(50, 50, 50)") document.body.style.color = "white";

  function getCookie(name) {
    const value = `; ${document.cookie}`;
    const parts = value.split(`; ${name}=`);
    if (parts.length === 2) return parts.pop().split(';').shift();
  }

  function changeTheme() {
    if (getCookie("theme") == "white") {
      document.cookie = "theme=rgb(50, 50, 50); expires=Sa, 1 Jun 2024 12:00:00 UTC"
      document.body.style.backgroundColor = getCookie("theme")
      document.body.style.color = "white"
    } else if (getCookie("theme") == "rgb(50, 50, 50)") {
      document.cookie = "theme=white; expires=Sa, 1 Jun 2024 12:00:00 UTC"
      document.body.style.backgroundColor = getCookie("theme")
      document.body.style.color = "black"
    } else {
      document.cookie = "theme=white; expires=Sa, 1 Jun 2024 12:00:00 UTC"
    }
  }
</script>