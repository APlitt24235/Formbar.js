    <script src="/socket.io/socket.io.js"></script>

    <script type="text/javascript">
        var socket = io()
        socket.emit('vbData')
        socket.emit('cpupdate')

        function submitBreak() {
            let reason = 'bathroom'
            socket.emit('takeBreak', reason)
            socket.emit('cpupdate')
            socket.emit('vbData')
        }
    </script>
