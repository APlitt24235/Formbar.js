        <dialog id="dialog">
            <form onsubmit="submitBreak()">
                <input type="radio" name="radio">
                <input type="radio" name="radio" value="">
                <input type="text">
                <button class="quickButton" type="submit">Take</button>
            </form>
        </dialog>
